@model SignUpInputModel

<div class="login-page">
    <div class="page-header">
        <h1>Signup</h1>
    </div>

    <partial name="_ValidationSummary" />

    <div class="row">
            <div class="col-sm-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Register your new account here!</h3>
                    </div>
                    <div class="panel-body">

                        <form asp-route="Login">
                            <input type="hidden" asp-for="ReturnUrl" />

                            <fieldset>
                                <div class="form-group">
                                    <label asp-for="Username"></label>
                                    <input class="form-control" placeholder="Username" asp-for="Username" autofocus>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Email"></label>
                                    <input class="form-control" placeholder="Email" asp-for="Email" autofocus>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Password"></label>
                                    <input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off">
                                </div>
                                 <div class="form-group">
                                    <label asp-for="ConfirmPassword"></label>
                                    <input type="password" class="form-control" placeholder="Confirm Password" asp-for="ConfirmPassword" autocomplete="off">
                                </div>
                                <div class="form-group">
                                    <button class="btn btn-primary" name="button" value="login">Signup</button>
                                    <button class="btn btn-default" name="button" value="cancel">Cancel</button>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
                @if(ViewBag.Errors != null){
                    <div class="alert alert-danger">
                        <strong>Invalid login request</strong>
                        @foreach (var error in ViewBag.Errors)
                        {
                            <span>@error.Description</span>
                        }
                    </div>
                }
            </div>
    </div>
</div>